<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="beach_day.BeachSelectPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="This page will let user select a beach from SQLite, 
                   grab its lat/lng, then display the weather for 1 week.  
                   Then the user can click to launch google maps."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Display Weather Location" HeightRequest="30" FontSize="7" Clicked="Beach_SelectionButton_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>