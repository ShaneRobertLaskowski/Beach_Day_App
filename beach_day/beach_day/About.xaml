<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="beach_day.About" BackgroundColor="{StaticResource ThemeColor3}">
    <ContentPage.Content>
        <StackLayout Margin="6" Padding="6">
            <Image Source="beachDayLogo.png" />

            <Label Text="Created By: Shane Laskowski"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" Style="{StaticResource LabelPageHeading1}"/>

            <Label Text="Special thanks to Daniel Causer and Thomas Desmond"
                VerticalOptions="CenterAndExpand" FontSize="Small"
                HorizontalOptions="CenterAndExpand" Style="{StaticResource LabelPageHeading1}"/>

            <Label Text="This app uses the Dark Sky API to retrieve Weather Data"
                VerticalOptions="CenterAndExpand" FontSize="Small"
                HorizontalOptions="CenterAndExpand" Style="{StaticResource LabelPageHeading1}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>